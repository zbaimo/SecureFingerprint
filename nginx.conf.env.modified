events {
    worker_connections 1024;
    multi_accept on;
}

http {
    # 基础设置
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # 日志
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';
    access_log /var/log/nginx/access.log main;
    error_log /var/log/nginx/error.log warn;

    # Gzip
    gzip on;
    gzip_disable "msie6";
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # SSL 设置
    ssl_certificate /etc/nginx/certs/zbaimo.com/fullchain.pem;
    ssl_certificate_key /etc/nginx/certs/zbaimo.com/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;

    # 关闭 ssl_stapling，避免 OCSP 警告
    ssl_stapling off;
    ssl_stapling_verify off;

    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    resolver 1.1.1.1 8.8.8.8 valid=300s;
    resolver_timeout 5s;

    # 安全头
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    # 🔄 修改CSP策略以支持Vue.js应用
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:;" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Feature-Policy "geolocation 'self'; microphone 'self';" always;
    # ➕ 新增防火墙控制器标识头
    add_header X-Firewall-Controller "v1.0.0" always;
    client_max_body_size 0;
    server_tokens off;

    # ➕ 新增：限制请求频率配置
    limit_req_zone $binary_remote_addr zone=api:10m rate=10r/s;
    limit_req_zone $binary_remote_addr zone=login:10m rate=1r/s;
    limit_req_zone $binary_remote_addr zone=firewall_api:10m rate=20r/s;

    # ➕ 新增：上游服务器配置
    upstream firewall_backend {
        server 172.18.0.1:8080;  # 防火墙控制器后端
        keepalive 32;
    }

    # 🔄 修改子域名映射端口
    map $host $proxy_port {
        default 6600;
        icloud.zbaimo.com 6600;
        firewall.zbaimo.com 8080;  # ➕ 新增防火墙控制器域名
    }

    # 🔄 修改HTTP重定向，添加防火墙域名
    server {
        listen 80;
        listen [::]:80;
        server_name icloud.zbaimo.com firewall.zbaimo.com;  # ➕ 添加防火墙域名
        return 301 https://$host$request_uri;
    }

    # 阻止直接 IP HTTP 访问
    server {
        listen 80 default_server;
        listen [::]:80 default_server;
        server_name _;
        return 444;
    }

    # 🔄 修改HTTPS主服务器，支持双域名
    server {
        listen 443 ssl;
        listen [::]:443 ssl;
        http2 on;
        server_name icloud.zbaimo.com firewall.zbaimo.com;  # ➕ 添加防火墙域名

        # 文件下载 (仅对iCloud域名生效)
        location ^~ /files/ {
            # ➕ 新增域名限制
            if ($host != "icloud.zbaimo.com") {
                return 404;
            }
            root /opt/alist/data/File;
            autoindex off;
            add_header 'Accept-Ranges' 'bytes';

            client_max_body_size 0;
            proxy_buffering off;
            sendfile on;
            tcp_nopush on;
            tcp_nodelay on;
            keepalive_timeout 120s;
            send_timeout 300s;
            proxy_read_timeout 300s;
        }

        # ➕ 新增：防火墙控制器API接口
        location ^~ /api/ {
            # 只允许防火墙域名访问API
            if ($host != "firewall.zbaimo.com") {
                return 404;
            }
            
            # API频率限制
            limit_req zone=firewall_api burst=50 nodelay;
            
            # 代理到防火墙控制器，正确传递客户端信息
            proxy_pass http://firewall_backend;
            proxy_http_version 1.1;
            
            # 🔑 关键：正确传递真实客户端IP和代理信息
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Port $server_port;
            
            # 支持WebSocket升级
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_cache_bypass $http_upgrade;
            
            # 超时设置
            proxy_connect_timeout 30s;
            proxy_send_timeout 30s;
            proxy_read_timeout 30s;
        }

        # ➕ 新增：登录接口特殊限制
        location ^~ /api/v1/auth/login {
            if ($host != "firewall.zbaimo.com") {
                return 404;
            }
            
            limit_req zone=login burst=5 nodelay;
            
            proxy_pass http://firewall_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # ➕ 新增：健康检查接口
        location /health {
            proxy_pass http://firewall_backend/api/v1/system/health;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            access_log off;
        }

        # WebSocket (仅对iCloud域名生效)
        location /ws {
            # ➕ 新增域名限制
            if ($host != "icloud.zbaimo.com") {
                return 404;
            }
            proxy_pass http://172.18.0.1:$proxy_port;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "Upgrade";
            proxy_set_header Host $host;
            # ➕ 新增代理头传递
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_cache_bypass $http_upgrade;
        }

        # 🔄 修改反向代理，支持域名路由
        location / {
            # 防火墙控制器域名处理
            if ($host = "firewall.zbaimo.com") {
                # 代理到防火墙控制器
                proxy_pass http://firewall_backend;
            }
            
            # iCloud域名处理 (保持原有逻辑)
            if ($host = "icloud.zbaimo.com") {
                proxy_set_header X-Forwarded-Proto $scheme;
                proxy_pass http://172.18.0.1:$proxy_port;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_cache_bypass $http_upgrade;
                add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate" always;
            }
            
            # 🔑 通用代理头设置（确保所有请求都正确传递客户端信息）
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # ➕ 新增：防火墙控制器静态资源缓存
            location ~* \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
                if ($host = "firewall.zbaimo.com") {
                    expires 1y;
                    add_header Cache-Control "public, immutable";
                    proxy_pass http://firewall_backend;
                }
                if ($host = "icloud.zbaimo.com") {
                    proxy_pass http://172.18.0.1:$proxy_port;
                }
                # 确保代理头传递
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            }
        }

        # 禁止隐藏文件访问
        location ~ /\.(?!well-known).* {
            deny all;
        }
    }

    # 阻止直接 IP HTTPS 访问
    server {
        listen 443 ssl default_server;
        listen [::]:443 ssl default_server;
        http2 on;
        server_name _;

        ssl_certificate /etc/nginx/certs/zbaimo.com/fullchain.pem;
        ssl_certificate_key /etc/nginx/certs/zbaimo.com/privkey.pem;

        return 444;
    }
}

# ➕ 新增：WebSocket连接升级映射
map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}
