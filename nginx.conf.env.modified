events {
    worker_connections 1024;
    multi_accept on;
}

http {
    # åŸºç¡€è®¾ç½®
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # æ—¥å¿—
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';
    access_log /var/log/nginx/access.log main;
    error_log /var/log/nginx/error.log warn;

    # Gzip
    gzip on;
    gzip_disable "msie6";
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # SSL è®¾ç½®
    ssl_certificate /etc/nginx/certs/zbaimo.com/fullchain.pem;
    ssl_certificate_key /etc/nginx/certs/zbaimo.com/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;

    # å…³é—­ ssl_staplingï¼Œé¿å… OCSP è­¦å‘Š
    ssl_stapling off;
    ssl_stapling_verify off;

    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    resolver 1.1.1.1 8.8.8.8 valid=300s;
    resolver_timeout 5s;

    # å®‰å…¨å¤´
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    # ğŸ”„ ä¿®æ”¹CSPç­–ç•¥ä»¥æ”¯æŒVue.jsåº”ç”¨
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:;" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Feature-Policy "geolocation 'self'; microphone 'self';" always;
    # â• æ–°å¢é˜²ç«å¢™æ§åˆ¶å™¨æ ‡è¯†å¤´
    add_header X-Firewall-Controller "v1.0.0" always;
    client_max_body_size 0;
    server_tokens off;

    # â• æ–°å¢ï¼šé™åˆ¶è¯·æ±‚é¢‘ç‡é…ç½®
    limit_req_zone $binary_remote_addr zone=api:10m rate=10r/s;
    limit_req_zone $binary_remote_addr zone=login:10m rate=1r/s;
    limit_req_zone $binary_remote_addr zone=firewall_api:10m rate=20r/s;

    # â• æ–°å¢ï¼šä¸Šæ¸¸æœåŠ¡å™¨é…ç½®
    upstream firewall_backend {
        server 172.18.0.1:8080;  # é˜²ç«å¢™æ§åˆ¶å™¨åç«¯
        keepalive 32;
    }

    # ğŸ”„ ä¿®æ”¹å­åŸŸåæ˜ å°„ç«¯å£
    map $host $proxy_port {
        default 6600;
        icloud.zbaimo.com 6600;
        firewall.zbaimo.com 8080;  # â• æ–°å¢é˜²ç«å¢™æ§åˆ¶å™¨åŸŸå
    }

    # ğŸ”„ ä¿®æ”¹HTTPé‡å®šå‘ï¼Œæ·»åŠ é˜²ç«å¢™åŸŸå
    server {
        listen 80;
        listen [::]:80;
        server_name icloud.zbaimo.com firewall.zbaimo.com;  # â• æ·»åŠ é˜²ç«å¢™åŸŸå
        return 301 https://$host$request_uri;
    }

    # é˜»æ­¢ç›´æ¥ IP HTTP è®¿é—®
    server {
        listen 80 default_server;
        listen [::]:80 default_server;
        server_name _;
        return 444;
    }

    # ğŸ”„ ä¿®æ”¹HTTPSä¸»æœåŠ¡å™¨ï¼Œæ”¯æŒåŒåŸŸå
    server {
        listen 443 ssl;
        listen [::]:443 ssl;
        http2 on;
        server_name icloud.zbaimo.com firewall.zbaimo.com;  # â• æ·»åŠ é˜²ç«å¢™åŸŸå

        # æ–‡ä»¶ä¸‹è½½ (ä»…å¯¹iCloudåŸŸåç”Ÿæ•ˆ)
        location ^~ /files/ {
            # â• æ–°å¢åŸŸåé™åˆ¶
            if ($host != "icloud.zbaimo.com") {
                return 404;
            }
            root /opt/alist/data/File;
            autoindex off;
            add_header 'Accept-Ranges' 'bytes';

            client_max_body_size 0;
            proxy_buffering off;
            sendfile on;
            tcp_nopush on;
            tcp_nodelay on;
            keepalive_timeout 120s;
            send_timeout 300s;
            proxy_read_timeout 300s;
        }

        # â• æ–°å¢ï¼šé˜²ç«å¢™æ§åˆ¶å™¨APIæ¥å£
        location ^~ /api/ {
            # åªå…è®¸é˜²ç«å¢™åŸŸåè®¿é—®API
            if ($host != "firewall.zbaimo.com") {
                return 404;
            }
            
            # APIé¢‘ç‡é™åˆ¶
            limit_req zone=firewall_api burst=50 nodelay;
            
            # ä»£ç†åˆ°é˜²ç«å¢™æ§åˆ¶å™¨ï¼Œæ­£ç¡®ä¼ é€’å®¢æˆ·ç«¯ä¿¡æ¯
            proxy_pass http://firewall_backend;
            proxy_http_version 1.1;
            
            # ğŸ”‘ å…³é”®ï¼šæ­£ç¡®ä¼ é€’çœŸå®å®¢æˆ·ç«¯IPå’Œä»£ç†ä¿¡æ¯
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Port $server_port;
            
            # æ”¯æŒWebSocketå‡çº§
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_cache_bypass $http_upgrade;
            
            # è¶…æ—¶è®¾ç½®
            proxy_connect_timeout 30s;
            proxy_send_timeout 30s;
            proxy_read_timeout 30s;
        }

        # â• æ–°å¢ï¼šç™»å½•æ¥å£ç‰¹æ®Šé™åˆ¶
        location ^~ /api/v1/auth/login {
            if ($host != "firewall.zbaimo.com") {
                return 404;
            }
            
            limit_req zone=login burst=5 nodelay;
            
            proxy_pass http://firewall_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # â• æ–°å¢ï¼šå¥åº·æ£€æŸ¥æ¥å£
        location /health {
            proxy_pass http://firewall_backend/api/v1/system/health;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            access_log off;
        }

        # WebSocket (ä»…å¯¹iCloudåŸŸåç”Ÿæ•ˆ)
        location /ws {
            # â• æ–°å¢åŸŸåé™åˆ¶
            if ($host != "icloud.zbaimo.com") {
                return 404;
            }
            proxy_pass http://172.18.0.1:$proxy_port;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "Upgrade";
            proxy_set_header Host $host;
            # â• æ–°å¢ä»£ç†å¤´ä¼ é€’
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_cache_bypass $http_upgrade;
        }

        # ğŸ”„ ä¿®æ”¹åå‘ä»£ç†ï¼Œæ”¯æŒåŸŸåè·¯ç”±
        location / {
            # é˜²ç«å¢™æ§åˆ¶å™¨åŸŸåå¤„ç†
            if ($host = "firewall.zbaimo.com") {
                # ä»£ç†åˆ°é˜²ç«å¢™æ§åˆ¶å™¨
                proxy_pass http://firewall_backend;
            }
            
            # iCloudåŸŸåå¤„ç† (ä¿æŒåŸæœ‰é€»è¾‘)
            if ($host = "icloud.zbaimo.com") {
                proxy_set_header X-Forwarded-Proto $scheme;
                proxy_pass http://172.18.0.1:$proxy_port;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_cache_bypass $http_upgrade;
                add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate" always;
            }
            
            # ğŸ”‘ é€šç”¨ä»£ç†å¤´è®¾ç½®ï¼ˆç¡®ä¿æ‰€æœ‰è¯·æ±‚éƒ½æ­£ç¡®ä¼ é€’å®¢æˆ·ç«¯ä¿¡æ¯ï¼‰
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # â• æ–°å¢ï¼šé˜²ç«å¢™æ§åˆ¶å™¨é™æ€èµ„æºç¼“å­˜
            location ~* \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
                if ($host = "firewall.zbaimo.com") {
                    expires 1y;
                    add_header Cache-Control "public, immutable";
                    proxy_pass http://firewall_backend;
                }
                if ($host = "icloud.zbaimo.com") {
                    proxy_pass http://172.18.0.1:$proxy_port;
                }
                # ç¡®ä¿ä»£ç†å¤´ä¼ é€’
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            }
        }

        # ç¦æ­¢éšè—æ–‡ä»¶è®¿é—®
        location ~ /\.(?!well-known).* {
            deny all;
        }
    }

    # é˜»æ­¢ç›´æ¥ IP HTTPS è®¿é—®
    server {
        listen 443 ssl default_server;
        listen [::]:443 ssl default_server;
        http2 on;
        server_name _;

        ssl_certificate /etc/nginx/certs/zbaimo.com/fullchain.pem;
        ssl_certificate_key /etc/nginx/certs/zbaimo.com/privkey.pem;

        return 444;
    }
}

# â• æ–°å¢ï¼šWebSocketè¿æ¥å‡çº§æ˜ å°„
map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}
